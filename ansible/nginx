  ---
  - hosts: web_nginx_servers
    remote_user: evg
    become: yes
    become_user: root
    tasks:
    - name: "nginx install"
      apt:
        name: nginx
       update_cache: yes
       state: latest

   - name: copy index_new.html
     copy:
       src: /home/evg/web_site/index.nginx-debian.html
       dest: /var/www/html/index.nginx-debian.html

   - name: "nginx start"
     service:
       name: nginx
       enabled: yes
       state: started
 ...
